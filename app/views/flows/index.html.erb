


<div class = "main-container">

	<div class="header">
		<div class="flows-logo"><%= image_tag "http://via.placeholder.com/50x24" %></div>

		<div class="nav-link push">
			<%= link_to "Home", root_path, :class => current_class?(root_path) %>
		</div>

		<div class="nav-link">
			<%= link_to "About", root_path %>
		</div>
	</div>
	
	<div class="content-container">
		<div class="empty"> </div>

		<div class="intro-message"><span class="intro-head grey-dark">Real life flows by industry leaders in design.</span>
			<span class="intro-subhead grey-light">Curated for your inspiration.</span>
		</div>

		<div class="menu" id="active-menu">
			<div class="category"><%= active_link_to 'All', root_path, active: :exact, :remote => true %></div>

	    <% @categories.each do |cat| %>
	      <div class="category-links"><%= active_link_to cat.name, root_path(:category_id => cat.id), :remote => true, active: :exact %>	
	      </div>
	    <% end %>
	  </div>

		<div class="cards-container">
				<div class="cards-wrapper">
	    	<%= render 'index', locals: {flows: @flows} %>
	  		</div>

	  </div>

	</div>


<%#= link_to 'New Flow', new_flow_path %>
</div>
